{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "clang++ - Debug acousticsMain (no build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/solvers/acoustics/acousticsMain",
            "args": ["${workspaceFolder}/solvers/acoustics/tests/setups/setup_cube"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/solvers/acoustics",
            "environment": [
                {
                "name":"OMPI_MCA_rmaps_base_oversubscribe", // https://github.com/microsoft/vscode-cpptools/issues/2995
                "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
        },
        {
            "name": "clang++ - Debug acousticsTESTMain (no build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/solvers/acoustics/acousticsTestMain",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/solvers/acoustics",
            "environment": [
                {
                "name":"OMPI_MCA_rmaps_base_oversubscribe", // https://github.com/microsoft/vscode-cpptools/issues/2995
                "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
        },
        {
            "name": "clang++ - Debug active file (no build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": ["${workspaceFolder}/solvers/acoustics/tests/setups/setup_cube"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/solvers/acoustics",
            "environment": [
                {
                "name":"OMPI_MCA_rmaps_base_oversubscribe", // https://github.com/microsoft/vscode-cpptools/issues/2995
                "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "clang++ build active file"
        },
        {
            "name": "clang++ - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                "name":"OMPI_MCA_rmaps_base_oversubscribe", // https://github.com/microsoft/vscode-cpptools/issues/2995
                "value": "1"
                }
            ],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "clang++ build active file"
        }
    ]
}