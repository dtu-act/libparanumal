            "externalConsole": false,
            "MIMode": "gdb",
        },
        {
            "name": "gcc - Debug acousticsTESTMain (no build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/solvers/acoustics/acousticsTestMain",
            "args": ["[cube]"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/solvers/acoustics",
            // "environment": [
            //     { "name": "OCCA_DIR", "value": "~/libparanumal/occa"},
            //     { "name": "LD_LIBRARY_PATH", "value": "$LD_LIBRARY_PATH:$OCCA_DIR/lib"}
