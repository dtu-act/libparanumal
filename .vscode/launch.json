            "externalConsole": false,
            "MIMode": "gdb",
        },
        {
            "name": "clang++ - Debug acousticsMain (no build)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/solvers/acoustics/acousticsMain",
            "args": ["${workspaceFolder}/solvers/acoustics/tests/setups/setup_cube_p4_500hz_freq_indep"],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/solvers/acoustics",
            "environment": [
